<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".signup.Register"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:backgroundTint="@color/black"
            android:background="@drawable/buttonbordersdrawable">

            <!-- Luk overlay (x)  -->
            <TextView
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="270dp"
                android:clickable="true"
                android:text="x"
                android:textColor="@color/white"
                android:textSize="40sp"
                tools:ignore="TouchTargetSizeCheck" />

        <!-- Overskrift -->
            <TextView
                android:text="Signup"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"/>

            <!--   Fornavn input  -->
            <TextView
                android:text="Fornavn *"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="69dp"
                android:layout_marginStart="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/fName"
                android:layout_width="255dp"
                android:layout_height="30dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="90dp"
                android:background="@drawable/buttonbordersdrawable"
                android:backgroundTint="@color/white"
                android:inputType="text"
                android:textColor="@color/black"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <!--   Efternavn input  -->
            <TextView
                android:text="Efternavn *"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="130dp"
                android:layout_marginStart="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/lName"
                android:layout_width="255dp"
                android:layout_height="30dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="150dp"
                android:background="@drawable/buttonbordersdrawable"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <!--   Email input  -->
            <TextView
                android:text="Email *"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="190dp"
                android:layout_marginStart="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/regEmail"
                android:layout_width="255dp"
                android:layout_height="30dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="210dp"
                android:background="@drawable/buttonbordersdrawable"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <!--   Password input  -->
            <TextView
                android:text="Password *"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="250dp"
                android:layout_marginStart="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/pw"
                android:layout_width="255dp"
                android:layout_height="30dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="270dp"
                android:background="@drawable/buttonbordersdrawable"
                android:backgroundTint="@color/white"
                android:inputType="textPassword"
                android:textColor="@color/black"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <!--   Gentag password input  -->
            <TextView
                android:text="Gentag password *"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="310dp"
                android:layout_marginStart="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/conf_pw"
                android:layout_width="255dp"
                android:layout_height="30dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="330dp"
                android:background="@drawable/buttonbordersdrawable"
                android:backgroundTint="@color/white"
                android:inputType="textPassword"
                android:textColor="@color/black"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <!-- Signup knap -->
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="255dp"
                android:layout_height="40dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="390dp"
                android:background="@drawable/buttonbordersdrawable"
                android:backgroundTint="@color/green"
                android:text="Signup"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <!-- Link til login -->
            <TextView
                android:layout_marginTop="450dp"
                android:layout_marginStart="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Er du allerede bruger?"
                android:textColor="@color/white"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="450dp"
                android:clickable="true"
                android:text="Log ind!"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck"
                android:focusable="true" />

        </FrameLayout>
    </LinearLayout>

</RelativeLayout>