<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/green"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_horizontal"
        android:text="Liste over øvelser"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@color/white"
        android:textSize="22sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_horizontal"
        android:text="tryk på en af øvelser for at komme igang"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10sp"
        android:background="@android:color/transparent"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Øvelseliste"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:layout_marginStart="45dp"
        android:layout_marginTop="30dp"
        />

    <ListView
        android:id="@+id/ovPlanlistview"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:divider="@color/green"
        android:dividerHeight="14dp" />

    <Button
        android:id="@+id/btnBackov"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/buttonbordersdrawable"
        android:backgroundTint="@color/white"
        android:text="Tilbage"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:backgroundTint="#E6E8E3"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btnSort"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="-39dp"
        android:background="@drawable/buttonbordersdrawable"
        android:backgroundTint="@color/white"
        android:text="sortér"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:backgroundTint="#E6E8E3"
        tools:ignore="TouchTargetSizeCheck" />


</LinearLayout>