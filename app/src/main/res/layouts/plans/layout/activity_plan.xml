<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green"
    tools:context=".planer.PlanerActivity" >

    <TextView
        android:id="@+id/planId"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_horizontal"
        android:text="Workout"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@color/white"
        android:textSize="22sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_horizontal"
        android:text="Tryk på en af øvelserne"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10sp"
        android:background="@android:color/transparent"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/lvPlan"
        android:layout_width="300dp"
        android:layout_height="468dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        android:divider="@color/green"
        android:dividerHeight="14dp"

        />
    <Button
        android:id="@+id/btnDone"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/buttonbordersdrawable"
        android:text="Gennemfør"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:backgroundTint="#E6E8E3"
        tools:ignore="TouchTargetSizeCheck" />

</LinearLayout>