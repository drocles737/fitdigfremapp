<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".login.Login"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:backgroundTint="@color/black"
            android:background="@drawable/buttonbordersdrawable">

        <!-- Overskrift -->
            <TextView
                android:text="Login"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"/>

        <!-- Email label og textfield    -->
            <TextView
                android:text="Email *"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="69dp"
                android:layout_marginStart="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="255dp"
                android:layout_height="30dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="90dp"
                android:background="@drawable/buttonbordersdrawable"
                android:backgroundTint="@color/white"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <!-- Password label og textfield    -->
            <TextView

                android:text="Password *"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="140dp"
                android:layout_marginStart="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="255dp"
                android:layout_height="30dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="160dp"
                android:background="@drawable/buttonbordersdrawable"
                android:backgroundTint="@color/white"
                android:inputType="textPassword"
                android:textColor="@color/black"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <!-- Knap -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="255dp"
                android:layout_height="40dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="212dp"
                android:background="@drawable/buttonbordersdrawable"
                android:backgroundTint="@color/green"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <!-- Kryds-knap   -->
            <TextView
                android:id="@+id/btnfragmentexit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="270dp"
                android:clickable="true"
                android:text="x"
                android:textColor="@color/white"
                android:textSize="40sp"
                tools:ignore="TouchTargetSizeCheck" />

            <!--  Glemt password-->
            <TextView
                android:hint="glemt det?"
                android:layout_marginTop="265dp"
                android:layout_marginStart="22dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Glemt password?"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/Btngendanher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="140dp"
                android:layout_marginTop="265dp"
                android:clickable="true"
                android:text="Gendan her!"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <!--  Ikke allerede bruger?? ...-->
            <TextView
                android:layout_marginTop="345dp"
                android:layout_marginStart="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Har du ikke en bruger endnu?"
                android:textColor="@color/white"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/btnsignuptxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="213dp"
                android:layout_marginTop="345dp"
                android:clickable="true"
                android:text="Sign up!"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck"
                android:focusable="true" />

        </FrameLayout>
    </LinearLayout>

</RelativeLayout>