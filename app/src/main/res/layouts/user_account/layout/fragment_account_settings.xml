<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:layout_marginTop="150dp"
    android:layout_gravity="center_horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".user.AccountSettings"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="370dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/green">

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/konto"
                android:gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/chg_pw"
                android:layout_marginTop="100dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/updatePass"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/chg_email"
                android:layout_marginTop="160dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:text="@string/updateEmail"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/accBtn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="280dp"
                android:elevation="1dp"
                android:text="@string/userMenu"
                android:textSize="16sp"/>


        </FrameLayout>
    </LinearLayout>

</RelativeLayout>
