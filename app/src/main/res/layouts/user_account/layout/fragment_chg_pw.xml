<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:layout_marginTop="150dp"
    android:layout_gravity="center_horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".user.chg_pw"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="370dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/green">

            <!-- Overskrift -->
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/chg_pw"
                android:gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="@color/white" />

            <TextView
                android:text="@string/curr_pw"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/curr_pw"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/buttonbordersdrawable"
                android:backgroundTint="@color/white"
                android:inputType="textPassword"
                android:textColor="@color/black"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <!-- Password label og textfield    -->
            <TextView
                android:text="@string/new_pw"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="160dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/new_pw"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginTop="180dp"
                android:background="@drawable/buttonbordersdrawable"
                android:backgroundTint="@color/white"
                android:inputType="textPassword"
                android:textColor="@color/black"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <Button
                android:id="@+id/chg"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="220dp"
                android:elevation="1dp"
                android:text="@string/chg"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:elevation="1dp"
                android:text="@string/cancel_btn"
                android:textSize="16sp"/>

        </FrameLayout>
    </LinearLayout>

</RelativeLayout>
